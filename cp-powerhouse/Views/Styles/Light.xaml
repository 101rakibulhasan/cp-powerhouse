<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" x:Key="Background_Grad">
        <GradientStop Color="#FFDDC9FF" Offset="0.006"/>
        <GradientStop Color="White" Offset="1"/>
        <GradientStop Color="#FFFCFBFF" Offset="0.237"/>
    </LinearGradientBrush>

    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" x:Key="LeftBar_Grad">
        <GradientStop Color="White" Offset="1"/>
        <GradientStop Color="#FFC6A8FC" Offset="0"/>
    </LinearGradientBrush>

    <SolidColorBrush Color="#FFC6A8FC" x:Key="PrimaryColor"></SolidColorBrush>
    <SolidColorBrush Color="#FFDAA8FC" x:Key="PrimaryDiffColor"></SolidColorBrush>
    <SolidColorBrush Color="#FF7E37FF" x:Key="PrimaryColorDark"></SolidColorBrush>

    <BitmapImage x:Key="SettingsImage" UriSource="/Views/Resources/settings.png" />

</ResourceDictionary>